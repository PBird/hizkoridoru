<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="20dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:gravity="center"
            android:text="Otoyol Seçimi"
            android:textSize="27sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/v_anadolu"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:background="@drawable/otoyolselector"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anadolu Otoyolu"
            android:textColor="@color/textColorPrimary"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Çamlıca İstasyonu - Akıncı Kesimi"
            android:textColor="@color/colorStart"
            android:textSize="17sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/v_cesme"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:background="@drawable/otoyolselector"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Çeşme Otoyolu"
            android:textColor="@color/textColorPrimary"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İzmir - Çeşme"
            android:textColor="@color/colorStart"
            android:textSize="17sp"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/v_aydin"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:background="@drawable/otoyolselector"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aydın Otoyolu"
            android:textColor="@color/textColorPrimary"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Işıkkent - Aydın Batı Kesimi"
            android:textColor="@color/colorStart"
            android:textSize="17sp"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/v_urfa"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:background="@drawable/otoyolselector"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urfa Otoyolu"
            android:textColor="@color/textColorPrimary"
            android:textSize="27sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adana Doğu Alın - Şanlıurfa Kesimi"
            android:textColor="@color/colorStart"
            android:textSize="17sp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/v_mersin"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:background="@drawable/otoyolselector"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mersin Otoyolu"
            android:textColor="@color/textColorPrimary"
            android:textSize="27sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Niğde - Mersin - Adana Batı Kesimi"
            android:textColor="@color/colorStart"
            android:textSize="17sp"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/v_avrupa"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:background="@drawable/otoyolselector"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avrupa Otoyolu"
            android:textColor="@color/textColorPrimary"
            android:textSize="27sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mahmutbey - Edirne Kesimi"
            android:textColor="@color/colorStart"
            android:textSize="17sp"
            />

    </LinearLayout>








</LinearLayout>